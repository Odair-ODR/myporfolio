<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SysMyPortfolio</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto Mono">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.10.377/pdf.min.js"></script>
    @*    <link rel="stylesheet" href="~/SysMyPortfolio.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header class="">
        <div class="nav-container">
            <div class="nav-elements">
                <div class="sub-nav">
                    <a asp-action="Index" asp-controller="Home" class="me">Odair Huamani Conde</a>
                </div>
                <div class="sub-nav navright">
                    <a id="menu-toggle" class="menu-toggle"><i class="bi bi-list"></i></a>
                    <ul class="nav-items" id="menu">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Home")" class="linkAction">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("AboutMe", "Home")" class="linkAction">Sobre mi</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Portfolio")" class="linkAction">Portafolio</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Contact" asp-controller="Home" class="linkAction">Contacto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3" id="mainContentAspview">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="row">
            <div class="col-md-7">
                <div class="contact-footer">
                    <h4>Contacto</h4>
                    <p class="p-footer"><i class="bi bi-phone-vibrate"></i> +51 993129674</p>
                    <p class="p-footer"><i class="bi bi-envelope-at"></i> odair.1697@gmail.com</p>
                    <p class="p-footer"><i class="bi bi-envelope-at"></i> odr.1697@outlook.com</p>
                </div>
            </div>
            <div class="col-md-5">
                <p class="p-footer">© 2023 — Desarrollado por Odair Huamani Conde</p>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/sitedom.js"></script>
    <script type="module" src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
